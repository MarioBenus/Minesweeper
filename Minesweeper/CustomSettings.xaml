<Window x:Class="Minesweeper.CustomSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="CustomSettings" Height="300" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Rows:" Margin="5"/>
            <TextBox x:Name="RowsTextBox" Width="200" Margin="5"/>
            <TextBlock Text="Columns:" Margin="5"/>
            <TextBox x:Name="ColumnsTextBox" Width="200" Margin="5"/>
            <TextBlock Text="Mines:" Margin="5"/>
            <TextBox x:Name="MinesTextBox" Width="200" Margin="5"/>
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Content="OK" Width="100" Margin="5" Click="OK_Click"/>
                <Button Content="Cancel" Width="100" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
            <TextBlock x:Name="ErrorLine" Text="" Margin="5"/>
        </StackPanel>

    </Grid>
</Window>
